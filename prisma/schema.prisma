datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

model User {
  UserId Int @id @default(autoincrement())
  FirstName String
  LastName String?
  Email String
  Password String
  Avatar String?
  Role String @default("user")
  CreatedAt DateTime @default(dbgenerated("now()"))
}
